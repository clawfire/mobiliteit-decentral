  <h3>ðŸ› &nbsp;&nbsp;Opened issues</h3>
  <div class="ui feed">
    {{#each model.data as |report|}}
      <div class="event">
        {{#if report.bus}}
          <div class="label"><i class="shipping icon"></i></div>
        {{else}}
          {{#if report.stop}}
            <div class="label"><i class="marker icon"></i></div>
          {{else}}
            {{#if report.line}}
              <div class="label"><i class="road icon"></i></div>
            {{else}}
              <div class="label"><i class="bullseye icon"></i></div>
            {{/if}}
          {{/if}}
        {{/if}}
        <div class="content">
          <div class="summary">
            A new report has been filled
            <div class="date">
              {{report.dt_create}}
            </div>
          </div>
          {{#if report.comment}}
            <div class="extra text">
              {{report.comment}}
            </div>
          {{/if}}
          <div class="meta">
            <a class="like">
              <i class="like icon"></i> 4 Likes
            </a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>

  {{outlet}}
</div>
